@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="align-self:center">
<div class="col-lg-12"style="padding:10px,20px,5px,10px" >
    <label style="font-size:x-large"> Initiate Another Computation </label>
    <form class="btn-group-sm" action="/Home/Index" method="get">
        <input type="submit" name="index" value="Another Computation" class="btn-info" style="padding:20px; margin-top: 5px" />
    </form>
    </div>
<div class="col-lg-12" style="padding:10px,20px,5px,10px">
    <label style="font-size:x-large"> Download Resulted CSV File </label>
    <form action="/Home/Downloads" method="post">
        <input type="submit" name="download" value="Download Result File" class="btn-success" style="padding:20px; margin-top:5px" />
    </form>
</div>
</div>